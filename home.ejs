<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home - Latest News</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

    <!-- Navbar -->
    <nav class="bg-white shadow-md fixed top-0 w-full z-10">
        <div class="container mx-auto flex justify-between items-center p-4">
            <div class="text-xl font-bold text-blue-600">
                News
            </div>
            <div class="flex items-center space-x-4">
                <a href="/" class="text-gray-700 hover:text-blue-500">NewsFeed</a>
                <a href="#" class="text-gray-700 hover:text-blue-500">Science</a>
                <a href="#" class="text-gray-700 hover:text-blue-500">Technology</a>
                <a href="#" class="text-gray-700 hover:text-blue-500">Sports</a>
                <a href="#" class="text-gray-700 hover:text-blue-500">Business</a>
                <a href="#" class="text-gray-700 hover:text-blue-500">Register</a>

                <!-- Search Form in Navbar -->
                <form action="/search" method="POST" class="flex items-center ml-4">
                    <input type="text" name="query" class="border border-gray-300 px-2 py-1 rounded-md" placeholder="Search news" required>
                    <button type="submit" class="bg-blue-500 text-white px-3 py-1 rounded-md ml-2">Search</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mx-auto mt-16 p-4"> <!-- Adjusted mt-16 for better alignment -->
        <h1 class="text-3xl font-bold mb-4">Latest News</h1>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            <% articles.forEach(article => { %>
                <div class="bg-white shadow-md rounded-lg overflow-hidden">
                    <img src="<%= article.urlToImage %>" alt="News Image" class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h2 class="font-bold text-xl mb-2"><%= article.title %></h2>
                        <p class="text-gray-700 mb-2"><%= article.description %></p>
                        <a href="<%= article.url %>" class="text-blue-500 hover:text-blue-700" target="_blank">Read more</a>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>

    <a href="/chart" class="mt-4 inline-block bg-blue-500 text-white px-4 py-2 rounded-md">View Chart</a>


    <!-- Footer -->
    <footer class="bg-white shadow-md mt-10">
        <div class="container mx-auto p-4">
            <p class="text-center text-gray-600">Â© 2024 News App. All rights reserved.</p>
        </div>
    </footer>
</body>
</html>
